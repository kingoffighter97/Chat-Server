<Window x:Class="MsgClient.ChatRoomJoin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MsgClient"
        mc:Ignorable="d"
        Title="Join Chat Room" Height="200" Width="250" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblRoomName" Content="Room Name" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="54,10,0,0" VerticalAlignment="Top" Width="133" Height="37" FontSize="18"/>
        <TextBox x:Name="txtbRoomName" HorizontalAlignment="Left" Height="23" Margin="60,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center"/>
        <Button x:Name="btnJoinRoom" Content="Join" HorizontalAlignment="Left" Margin="83,114,0,0" VerticalAlignment="Top" Width="75" Click="btnJoinRoom_Click"/>

    </Grid>
</Window>
